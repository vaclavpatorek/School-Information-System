<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="SchoolIS.App.Shells.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SchoolIS.App.Views"
    FlyoutBehavior="Disabled"
    PresentationMode="NotAnimated"
    Title="SchoolIS.App">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="login" />
    <ShellContent ContentTemplate="{DataTemplate views:AdminPage}" Route="admin" />
    <ShellContent ContentTemplate="{DataTemplate views:SubjectPage}" Route="subjects" />
    <ShellContent ContentTemplate="{DataTemplate views:EvaluationPage}" Route="activities" />
    <ShellContent ContentTemplate="{DataTemplate views:TimetablePage}" Route="timetable" />
    <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" Route="profile" />
</Shell>